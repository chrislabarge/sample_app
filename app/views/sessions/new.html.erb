<%provide :title, "Log in"%>

<h1>Log In</h1>

<div class="row">
	<div class="col-xs-6 col-xs-offset-3">
			<%= form_for(:session, url: login_path ) do |f| %> <!-- this is the way to make a form that doesnt use an active record object like the new user sign-up form does.  This is how we point it at a symbol and give it a path, |f | refers to the :session symbol and hashed the params below to it-->
					

				<%= f.label :email%>
				<%= f.email_field :email, class: 'form-control'%>

				<%= f.label :password%>
				<%= f.password_field :password, class: 'form-control'%>
				
				<%= f.label :remember_me, class: "checkbox inline" do%>
					<%= f.check_box :remember_me %>				
					<span> Remember me on this computer</span>
					<%end%>	

				<%= f.submit "Log in", class: "btn btn-primary" %>
			<% end %>
			<p>New User? <%= link_to "Sign up now!", signup_path %></p>

	</div>
</div>
